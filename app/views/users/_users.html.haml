- @users.each do |user|
  %tr
    %td
      = link_to user.full_name, user_path(user) if user.confirmed?
    %td= user.email
    - if current_user.account
      %td
        - unless user.account
          - if user.active
            = button_to t("users.de_activate"), toggle_active_user_path(user), method: :put, class: "button-grey"
          - else
            = button_to t("users.activate"), toggle_active_user_path(user), method: :put, class: "button-grey"
    - unless user.accepted_or_not_invited?
      %td
        = t("users.invitation_sent_at",                            |
          time_ago: time_ago_in_words(user.invitation_created_at)) |
